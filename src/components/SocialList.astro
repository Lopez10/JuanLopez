---
import { Icon } from "astro-icon/components";

const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "Github",
		link: "https://github.com/Lopez10",
		name: "mdi:github",
	},
	{
		friendlyName: "Linkedin",
		link: "https://www.linkedin.com/in/juan-lopez-berges-7baa51130/",
		name: "mdi:linkedin",
	},
	{
		friendlyName: "Email",
		link: "mailto:ljuan7397@gmail.com",
		name: "mdi:email",
	},
];
---

<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
	{
		socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
			<li class="flex">
				<a
					class="inline-block p-1 sm:hover:text-link"
					href={link}
					rel={`noopener noreferrer ${isWebmention ? "me authn" : ""}`}
					target="_blank"
				>
					<Icon aria-hidden="true" class="h-6 w-6" focusable="false" name={name} />
					<span class="sr-only">{friendlyName}</span>
				</a>
			</li>
		))
	}
</ul>
